{
    "name": "Dartmouth Auto-Login Chrome Extension",
    "version": "1.0",
    "author": "John Schlachtenhaufen",
    "description": "Automatically logs you into Dartmouth SSO when accessing Dartmouth pages",
    "permissions": ["activeTab",  "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persisent": false
    },
    "content_scripts": [
        {
            "matches": ["*://websso.dartmouth.edu/*"],
            "js": ["main.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2
}
